<h1><%= t('views.common.title_show', name: User.model_name.human) %></h1>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong><%= User.human_attribute_name(:address) %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= User.human_attribute_name(:self_introduction) %>:</strong>
  <%= @user.self_introduction %>
</p>

<p>
  <strong><%= User.human_attribute_name(:avatar) %>:</strong>
  <% if @user.avatar.attached? %>
    <br>
    <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150]) %>
  <% end %>
</p>

<p>
  <% if @user.followings.any? %>
    <%= link_to FollowRelationship.human_attribute_name(:follow), user_followings_path(@user) %>
  <% else %>
    フォロー
  <% end %>
  (<%= @user.followings.count %>)
</p>

<p>
  <% if @user.followers.exists? %>
    <%= link_to FollowRelationship.human_attribute_name(:follower), user_followers_path(@user) %>
  <% else %>
    フォロワー
  <% end %>
  (<%= @user.followers.count %>)
</p>

<% if @user != current_user %>
  <% if current_user.following?(@user) %>
    <p>
      <%= link_to FollowRelationship.human_attribute_name(:unfollow), users_follow_relationship_path(id: @user), method: :delete %>
    </p>
  <% else %>
    <p>
      <%= link_to FollowRelationship.human_attribute_name(:follow_this_user), users_follow_relationships_path(id: @user), method: :post %>
    </p>
  <% end %>
<% end %>

<% if current_user == @user %>
  <%= link_to t('views.common.edit'), edit_user_registration_path %> |
<% end %>
<%= link_to t('views.common.back'), users_path %>
