<h2>Comments</h2>

<table>
  <thead>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% commentable.comments.each do |comment| %>
    <tr>
      <td><%= comment.body %></td>
      <td><%= comment.user.name %></td>
      <td><%= l comment.created_at, format: :long %></td>
      <% if comment.user == current_user %>
        <td><%= link_to 'Destroy', [commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>