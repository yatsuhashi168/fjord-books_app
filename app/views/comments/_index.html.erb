<h2><%= Comment.model_name.human %></h2>

<table>
  <thead>
  <tr>
    <th><%= Comment.human_attribute_name(:body) %></th>
    <th><%= Comment.human_attribute_name(:user) %></th>
    <th><%= Comment.human_attribute_name(:date) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% commentable.comments.each do |comment| %>
    <tr>
      <td><%= comment.body %></td>
      <td><%= comment.user.name != "" ? comment.user.name : comment.user.email%></td>
      <td><%= l comment.created_at, format: :long %></td>
      <% if comment.user == current_user %>
        <td><%= link_to t('views.common.destroy'), [commentable, comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>